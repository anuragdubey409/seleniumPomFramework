package com.google.utils;

import org.testng.Assert;

public class AssertionType {

	/**
	 * Validate on Equal
	 * 
	 * @param actual
	 * @param expected
	 */
	public void validateOnEqual(String actual, String expected) {
		Assert.assertEquals(actual, expected);
	}

	/**
	 * Validate the condition on True value
	 * 
	 * @param condition
	 */
	public void validateOnTrue(boolean condition) {
		Assert.assertTrue(condition);
	}

	/**
	 * Validate the condition on False value
	 */
	public void validateOnFalse(boolean condition) {
		Assert.assertFalse(condition);
	}

}
